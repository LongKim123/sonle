
@model IEnumerable<buoi4_lab4.Models.laptop>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h4 class="text-danger">Company</h4>
@{Html.RenderAction("getCompany", "Laptop"); }
<br />
<h4 class="text-danger">CPU</h4>
@{Html.RenderAction("getCPU", "Laptop"); }
<h4 class="text-danger">Screen Resolution</h4>
@{Html.RenderAction("getScreenResolution", "Laptop"); }

<h4 class="text-danger">Type Name</h4>
@{Html.RenderAction("getTypeName", "Laptop"); }

<h4 class="text-danger">Memory</h4>
@{Html.RenderAction("getMemory", "Laptop"); }

<h4 class="text-danger">Inches</h4>
@{Html.RenderAction("getInches", "Laptop"); }
<h4 class="text-danger">GPU</h4>
@{Html.RenderAction("getGPU", "Laptop"); }
<h4 class="text-danger">OS</h4>
@{Html.RenderAction("getOS", "Laptop"); }

<h4 class="text-danger">RAM</h4>
@{Html.RenderAction("getRam", "Laptop"); }

@*<h4 class="text-danger">Speed</h4>
@{Html.RenderAction("getSpeed", "Laptop"); }*@
<input type="button" name="name" onclick="find();" value="Assign" />
<ul id="laptop"></ul>




<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>


    var uri = "../../api/LaptopAPI"
    $(document).ready(function () {
        $.getJSON(uri).done(function (data) {
            $.each(data, function (key, item) {
                $('<li>', { text: formatItem(item) }).appendTo($('#laptop'));
            });
        });

    });
    function formatItem(item) {
        return item.Product + ':' + item.ScreenResolution;
    }
    function find() {
        $('#laptop').text('');
        var idString = "";
        var idCompany = $('#2').find('input[type=checkbox]');
        for (var i = 0; i < idCompany.length; i++) {
            if (idCompany[i].checked) {
                if (idString == "") {
                    idString = "2-" + idCompany[i].name;
                }
                else {
                    idString = idString + "_2-" + idCompany[i].name;
                }
            }
        }

        //CPU
        var idCPU = $('#6').find('input[type=checkbox]');
        for (var i = 0; i < idCPU.length; i++) {
            if (idCPU[i].checked) {
                if (idString == "") {
                    idString = "6-" + idCPU[i].name;
