            if (idRes[i].checked) {
                if (idString == "") {
                    idString = "3-" + idRes[i].name;
                }
                else {
                    idString = idString + "_3-" + idRes[i].name;
                }
            }
        }

        //TypeName
        var idTypeName = $('#4').find('input[type=checkbox]');
        for (var i = 0; i < idTypeName.length; i++) {
            if (idTypeName[i].checked) {
                if (idString == "") {
